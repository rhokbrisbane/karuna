
<% content_for :page_title, @group.name %>

<% content_for :featured_image, @group.featured_image.url if @group.featured_image.present? %>

<% unless @group.description.blank? %>
<div class='article-body' style="padding-bottom: 20px;">
  <%= @group.description.html_safe %>
</div>
<% end %>

<nav class='articles'>
  <% if @group.articles.any? %>
    <div class="grid-container">
      <% @group.articles.each do |article| %>
        <div class="one-half">
          <%= link_to '', short_article_path(@group, article), class: 'article-thumb', style: ("background-image: url(#{article.featured_image.url});" if article.featured_image.present?) %>

          <%= link_to article.title, short_article_path(@group, article), class: 'article-link' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No articles have been created for this group yet. :(</p>
  <% end %>
</nav>

<div class='arrow-nav'>
  <% unless @prev.blank? %>
    <%= link_to "<< Previous", short_group_path(@prev), class: 'previous' %>
  <% end %>
  <% unless @next.blank? %>
    <%= link_to "Next >>", short_group_path(@next), class: 'next' %>
  <% end %>
</div>

<% content_for :page_title, @meditation.name %>

<%= @meditation.description.html_safe %>

<br>

<p>
  <audio src="<%= @meditation.media_url %>" controls>
    Your browser does not support the <code>audio</code> element.
  </audio>
</p>

<div class='slick-carousel'>
  <% @meditation.images.find_each do |image| %>
    <div>
      <img src="<%= image.url %>" alt="<%= image.alt %>" title="<%= image.title %>">
    </div>
  <% end %>
</div>

<%= link_to 'All meditations', meditations_path %>
